    subgraph G_LOGITS["Share: logits tensor"]
        direction LR
        M1["M1: Shannon Entropy ⭐⭐⭐⭐⭐"]
        M2["M2: Top-K Margin ⭐⭐⭐⭐"]
        M3["M3: Voter Agreement ⭐⭐⭐"]
        M4["M4: Max Probability ⭐⭐⭐"]
        M12_L["M12: NaN/Inf<br/>(logits check)"]
    end

    subgraph G_ATTN["Share: attention_weights tensor"]
        direction LR
        M5["M5: Attn Entropy ⭐⭐⭐⭐⭐"]
        M6["M6: Concentration ⭐⭐⭐⭐"]
        M12_A["M12: NaN/Inf<br/>(attention check)"]
    end

    subgraph G_HIDDEN["Share: hidden_states tensor"]
        direction LR
        M8["M8: L2 Norm ⭐⭐⭐⭐"]
        M9["M9: Std Dev ⭐⭐⭐"]
        M11["M11: Mean ⭐⭐"]
        M12_H["M12: NaN/Inf<br/>(hidden check)"]
    end

    subgraph G_PROMPT["Share: prompt forward pass outputs"]
        direction LR
        M7a["M7a: Sparse Extraction ⭐⭐⭐⭐⭐"]
        M7b["M7b: Basin Score ⭐⭐⭐⭐⭐"]
        M10["M10: Layer Transform ⭐⭐⭐⭐"]
        M13_5b["M13.5b: Prompt Surprisal ⭐⭐⭐⭐"]
    end

    %% ═══════════════════════════════════════════════════════════════════
    %% SHARED INTERMEDIATE COMPUTATIONS
    %% Metrics that reuse the same intermediate result
    %% ═══════════════════════════════════════════════════════════════════

    subgraph CALC_SHARE["Shared Intermediate Calculations"]
        direction TB
        C1(["log_softmax(logits)"])
        C2(["softmax(logits) = exp(log_softmax)"])
        C3(["topk(probs, k=10)"])
        C4(["per_head_entropy(attn)"])
        C5(["per_head_max(attn)"])
    end

    %% log_softmax chain
    C1 -.-> M1
    C1 --> C2
    C2 -.-> M4
    C2 --> C3
    C3 -.-> M2
    C3 -.-> M3

    %% attention chain
    C4 -.-> M5
    C5 -.-> M6

    %% ═══════════════════════════════════════════════════════════════════
    %% METRIC → METRIC DEPENDENCIES (thick arrows)
    %% These are TRUE dependencies: metric B requires metric A's output
    %% ═══════════════════════════════════════════════════════════════════

    subgraph DERIVED["Derived Metrics"]
        direction LR
        M13["M13: Perplexity ⭐⭐⭐"]
        M13_5a["M13.5a: Surprisal (gen) ⭐⭐⭐⭐"]
    end

    M1 ==>|"entropy"| M13

    subgraph HEALTH["Health Flags (M14) — Post-Processing Aggregator"]
        direction TB
        M14["M14: Health Flags ⭐⭐⭐⭐⭐"]
        M14a["M14a: Repetition Loop"]
        M14b["M14b: Mid-Layer Anomaly"]
    end

    %% Health Flags depend on multiple metrics' outputs
    M12_L ==>|"nan/inf"| M14
    M12_A ==>|"nan/inf"| M14
    M12_H ==>|"nan/inf"| M14
    M5 ==>|"collapsed_head_count"| M14
    M1 ==>|"entropy > 4.0"| M14

    %% Repetition loop depends on hidden states (transient buffer)
    M14a ==> M14

    %% Mid-layer anomaly depends on L2 norms + NaN/Inf + attention collapse
    M8 ==>|"early-layer baseline"| M14b
    M12_H ==>|"mid-layer check"| M14b
    M5 ==>|"mid-layer collapse"| M14b
    M14b ==> M14

